<!DOCTYPE html>
<html lang="zh-TW">
  <head>
    <%- include ('templates/head') %>
  </head>

  <body>
    <%- include ('templates/nav_manage') %>
    
    <div class="manage">

      <h1>新增常見問題</h1>

      <form method="POST" class="manage__edit" action="/manage/question/add">
        
        <div class="question"">
          <h3>問題</h3>
          <input type="text" name="question" maxlength="20" />
        </div>
        
        <div class="answer">
          <h3>回答</h3>
          <input type="text" name="answer" maxlength="50" />
        </div>
        
        <div class="order">
          <h3>順序（請填數字）</h3>
          <p class="manage__explain">順序需在數字 1 ~ 99 之間</p>
          <input type="number" min="1" max="100" name="order" />
        </div>

        <div class="remind">
          <% if (errorMessage[0]) { %> <%= errorMessage %> <% } %>
        </div>

        <div class="post__btn">
          <button type="submit" class="edit-post__btn">送出</button>
        </div>
      </form>
    
    </div>

  </body>
</html>
